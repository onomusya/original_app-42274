<h2>予約フォーム</h2>

<%= form_with model: @reservation, local: true do |form| %>
  <div class="mb-3">
    <%= form.label :site_id, "サイトを選択" %>
    <%= form.collection_select :site_id, @sites, :id, :name, prompt: "選択してください", class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= form.label :start_date, "開始日" %>
    <%= form.date_field :start_date, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :end_date, "終了日" %>
    <%= form.date_field :end_date, class: "form-control" %>
  </div>

  <%= form.submit "予約する", class: "btn btn-success" %>
<% end %>